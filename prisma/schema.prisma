generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EmployeeRole {
  ADMIN
  HR_MANAGER
  DEPARTMENT_MANAGER
  EMPLOYEE
}

model Employee {
  empId    Int          @id @default(autoincrement()) @map("employee_id")
  name     String
  email    String       @unique
  password String       @map("password_hash")
  role     EmployeeRole @default(EMPLOYEE)
  orgId    Int          @map("organization_id")
  org      Organization @relation(fields: [orgId], references: [orgId])

  @@map("employees")
}

model Organization {
  orgId     Int        @id @default(autoincrement()) @map("organization_id")
  name      String
  employees Employee[]

  @@map("organizations")
}
